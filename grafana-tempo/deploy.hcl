step "terraform-init" {
  wkdir   = "grafana-tempo/terraform"
  target  = "grafana-tempo/terraform"
  command = "terraform"
  args    = ["init"]
  sha     = "h1:x5rja9EGcb5+9alFaQbIv1UIeLMfn9duAjl1l+RcyY0="
  retries = 0
}

